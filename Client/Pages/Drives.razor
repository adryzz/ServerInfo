@page "/drives"
@using ServerInfo.Types
@using System.IO
@using System.Threading
@inject HttpClient Http

<h1>Mounted drives</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (drives == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Drive format</th>
                <th>Drive type</th>
                <th>Total space</th>
                <th>Free space</th>
                <th>Root directory</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in drives.Where(x => x.DriveType == DriveType.Fixed))
            {
                <tr>
                    <td>@i.Name</td>
                    <td>@i.DriveFormat</td>
                    <td>@i.DriveType.ToString()</td>
                    <td>@Utils.FromBytesToString(i.TotalFreeSpace)</td>
                    <td>@Utils.FromBytesToString(i.AvailableFreeSpace)</td>
                    <td>@i.RootDirectory</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Drive[] drives;
    protected override async Task OnInitializedAsync()
    {
        drives = await Http.GetFromJsonAsync<Drive[]>("api/v1/driveinfo");
    }
}
