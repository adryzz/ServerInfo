<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">ServerInfo</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Overview
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="memory">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Memory
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="disks">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Disks
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="drives">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Mounted Drives
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="network">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Network
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
